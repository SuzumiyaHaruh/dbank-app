      "path": "pages/index/index",
      "style": {
        "app-plus": {
          "titleNView": false
        }
      }
    },
    {
      "path": "pages/list/list",
      "style": {
        "navigationBarTitleText": "",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/my/my",
      "style": {
